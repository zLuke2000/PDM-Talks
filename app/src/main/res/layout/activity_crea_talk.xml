<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".CreaTalk">

    <EditText
        android:id="@+id/ET_testoTalk"
        android:layout_width="363dp"
        android:layout_height="300dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:backgroundTint="#33FFBB33"
        android:drawableTint="@color/orange_light"
        android:hint="@string/talkHint"
        android:inputType="textLongMessage|textMultiLine"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/B_UploadPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_newPost" />

    <TextView
        android:id="@+id/TV_newPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newPost"
        android:textColor="@color/orange_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ET_testoTalk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/B_UploadPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="creaNuovoTalk"
        android:text="@string/submit"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_testoTalk" />
</androidx.constraintlayout.widget.ConstraintLayout>